@model List<Todo>
<h1 class="mb-3">Home</h1>


<table class="text-left table table-bordered">
        <thead>
            <tr>
                <th>Task title</th>
                <th>
                    <a asp-controller="Home" asp-action="Create"  class="btn btn-primary">Add task</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model){
                <tr id="task_id1">
                    <td>@obj.Title</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-primary">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>