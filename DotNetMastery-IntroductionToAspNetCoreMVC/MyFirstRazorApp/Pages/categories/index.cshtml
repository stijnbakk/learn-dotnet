@page
@model MyFirstRazorApp.Pages.Categories
@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">Add category</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Display order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder)){
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                    <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-trash-fill"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>